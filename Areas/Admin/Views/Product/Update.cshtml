@using DianaMVC.Areas.Admin.ViewModels;
@using DianaMVC.Models;
@model UpdateProductVM

<div class="container">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="mb-3 col-md-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control">
                <span asp-validation-for="Name" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control">
                <span asp-validation-for="Price" style="color:red"></span>
            </div>
            <div class="mb-3 col-md-3">
                <label asp-for="Description" class="form-label">Description</label>
                <input asp-for="Description" class="form-control">
                <span asp-validation-for="Description" style="color:red"></span>
            </div>

            <div class="mb-3 col-md-3">
                <label asp-for="CategoryId" class="form-label">Categories</label>
                <select class="form-select" asp-for="CategoryId" asp-items="new SelectList(ViewBag.Categories,nameof(Category.Id),nameof(Category.Name))">
                </select>
            </div>

            @* <div class="mb-3 col-md-3">
            <label asp-for="SizeIds" class="form-label">Size</label>
            <select class="form-select" asp-for="SizeIds" asp-items="new SelectList(ViewBag.Sizes,nameof(Size.Id),nameof(Size.Name))">

            </select>
            </div> *@

            <div class="mb-3 col-md-3">
                <label asp-for="ColorIds" class="form-label">Color</label>
                <select class="form-select" asp-for="ColorIds" asp-items="new SelectList(ViewBag.Colors,nameof(Color.Id),nameof(Color.Name))">
                </select>
            </div>

            <div class="mb-3 col-md-3">
                <label asp-for="MaterialIds" class="form-label">Material</label>
                <select class="form-select" asp-for="MaterialIds" asp-items="new SelectList(ViewBag.Material,nameof(Material.Id),nameof(Material.Name))">
                </select>
            </div>
        </div>
        <div class="row">
            <div class="row align-items-center">
                <div class="mb-3 col-md-3">
                    <label asp-for="MainPhoto" class="form-label">MainPhoto</label>
                    <input asp-for="MainPhoto" class="form-control">
                    <span asp-validation-for="MainPhoto" style="color:red"></span>
                </div>
                <div class="mb-3 col-md-3">
                    <label asp-for="HoverPhoto" class="form-label">HoverPhoto</label>
                    <input asp-for="HoverPhoto" class="form-control">
                    <span asp-validation-for="HoverPhoto" style="color:red"></span>
                </div>
                <div class="mb-3 col-md-3">
                    <label asp-for="Photos" class="form-label">Additional Photos</label>
                    <input asp-for="Photos" class="form-control">
                    <span asp-validation-for="Photos" style="color:red"></span>
                </div>
            </div>



            <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>